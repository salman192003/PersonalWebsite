{
    "name": "personal-portfolio",
    "version": "1.0.0",
    "description": "Personal Portfolio Website - MERN Stack",
    "main": "server.js",
    "scripts": {
        "start": "node backend/server.js",
        "server": "nodemon backend/server.js",
